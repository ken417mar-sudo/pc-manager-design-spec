{
  "source": "电脑管家设计规范，与 preview/app.css 一致",
  "components": {
    "nav-item": {
      "default": { "background": "transparent", "iconColor": "var(--color-icon-primary)" },
      "hover": { "background": "var(--color-bg-hover)", "iconColor": "var(--color-icon-primary)" },
      "active": { "background": "var(--color-bg-primary)", "iconColor": "var(--color-bg-theme)" },
      "activeHover": { "background": "var(--color-bg-primary)", "iconColor": "var(--color-bg-theme)" }
    },
    "defense-toggle": {
      "on": { "background": "var(--color-bg-theme)", "knobTranslateX": "18px" },
      "off": { "background": "var(--color-text-disabled)" },
      "knob": { "size": "14px", "offset": "2px", "background": "var(--color-text-button)", "transition": "transform 0.2s ease" }
    },
    "card-title-right": {
      "color": "var(--color-bg-theme)"
    },
    "button-primary": {
      "default": { "background": "var(--color-bg-theme)", "color": "var(--color-text-button)" },
      "hover": { "opacity": 0.9 },
      "disabled": { "opacity": 0.5 }
    }
  }
}
