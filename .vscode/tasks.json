{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "预览：启动服务",
      "type": "shell",
      "command": "python3 -m http.server 3000",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {}
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": { "regexp": "^$" },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Serving HTTP",
          "endsPattern": "."
        }
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "group": "build"
    },
    {
      "label": "预览：在 Cursor 内打开",
      "type": "shell",
      "command": "echo ${input:openPreviewInCursor}",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "echo": false,
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "预览（先启动服务，再在 Cursor 内打开）",
      "dependsOn": ["预览：启动服务", "预览：在 Cursor 内打开"],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "inputs": [
    {
      "id": "openPreviewInCursor",
      "type": "command",
      "command": "simpleBrowser.show",
      "args": ["http://localhost:3000/preview-from-spec/"]
    }
  ]
}
